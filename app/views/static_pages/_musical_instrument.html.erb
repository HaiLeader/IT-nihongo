<% images = @musical_instrument.musical_instrument_images %>
<div class="row carousel-holder">
  <div class="col-md-12">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% images.each_with_index do |image, index| %>
          <li data-target="#carousel-example-generic"
            data-slide-to="<%= index %>" <%= "class=active" if index == 0 %>></li>
        <% end %>
      </ol>

      <div class="carousel-inner">
        <% images.each do |image| %>
          <div class="item <%= "active" if image == images.first %>">
            <%= image_tag image.image, class: "slide-image" %>
          </div>
        <% end %>
      </div>

      <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>
  </div>
  <div class="col-md-12">
    <h3><div class="col-md-6"><%= t "admin.musical_instrument.musical_instrument_name" %>:
      <%= @musical_instrument.name %></div></h3>
    <h3><div class="col-md-6"><%= t "admin.musical_instrument.price" %>:
      <%= @musical_instrument.price %></div></h3>
    <h3><div class="col-md-6"><%= t "admin.musical_instrument.material" %>:
      <%= @musical_instrument.material %></div></h3>
    <h3><div class="col-md-6"><%= t "admin.musical_instrument.brand" %>:
      <%= @musical_instrument.brand %> </div></h3>
  </div>
</div>
<br />
