<div class="col-md-9">
  <%= render "musical_instrument" %>

  <div class="row">
    <% @musical_instrument.posts.each do |post| %>
      <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
          <%= link_to image_tag(@musical_instrument.musical_instrument_images.first.image), "#" %>
          <div class="caption">
            <h4><%= link_to post.content, post %></h4>
            <p><%= post.content %></p>
          </div>
          <div class="ratings">
            <p class="pull-right">15 reviews</p>
            <p>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    </div>

  </div>
</div>
