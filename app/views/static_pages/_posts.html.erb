<div class="row">
  <% @musical_instrument.posts.each do |post| %>
    <div class="col-sm-4 col-lg-4 col-md-4">
      <div class="thumbnail">
        <%= link_to image_tag(post.image), post %>
        <div class="caption">
          <h4><%= link_to post.content.html_safe, post %></h4>
          <p><%= post.content.html_safe %></p>
        </div>
        <div class="ratings">
          <p class="pull-right">15 reviews</p>
          <p>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
